<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/screenTitle"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="25dp"
        android:layout_width="match_parent"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#0022FF"
        android:text="WIP: TRACK VIEWER SCREEN"
        android:background="@color/white"/>


    <GridLayout
        android:id="@+id/statsGridLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:rowCount="2"
        android:columnCount="5"
        app:layout_constraintTop_toBottomOf="@id/screenTitle">

        <TextView
            android:id="@+id/trackName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_columnSpan="3"
            android:gravity="center"
            android:text="@string/telemetry_standby_placeholder"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/trackDate"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:gravity="center"
            android:text="@string/telemetry_standby_placeholder"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/startTime"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:gravity="center"
            android:text="@string/telemetry_standby_placeholder"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/endTime"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:gravity="center"
            android:text="@string/telemetry_standby_placeholder"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/numOfTracks"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="@string/telemetry_standby_placeholder"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@color/white"/>


        <TextView
            android:id="@+id/elapsedTime"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="@string/telemetry_standby_placeholder"
            android:textColor="#FFFA00"
            android:textStyle="bold"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/speed"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="@string/telemetry_standby_placeholder"
            android:textColor="#FFFA00"
            android:textStyle="bold"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/distance"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="@string/telemetry_standby_placeholder"
            android:textColor="#FFFA00"
            android:textStyle="bold"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/maxSpeed"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="@string/telemetry_standby_placeholder"
            android:textColor="#FFFA00"
            android:textStyle="bold"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/trackID"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="@string/telemetry_standby_placeholder"
            android:textColor="#FFFA00"
            android:textStyle="bold"
            android:background="@color/subtext_grey"/>


    </GridLayout>

    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/testButtonGrid"
        app:layout_constraintTop_toBottomOf="@id/statsGridLayout" />

    <GridLayout
        android:visibility="visible"
        android:id="@+id/testButtonGrid"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:rowCount="2"
        android:columnCount="4"

        app:layout_constraintTop_toBottomOf="@id/mapView"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation">

        <Button
            android:id="@+id/buttonLoadPrev"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="PREV" />

        <Button
            android:id="@+id/buttonLoadNext"

            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="NEXT" />

        <Button
            android:id="@+id/buttonDeleteLoadedTrack"
            android:backgroundTint="@android:color/holo_red_light"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="DEL" />

        <Button
            android:id="@+id/buttonClearUI"
            android:backgroundTint="#3F51B5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="Clear" />

    </GridLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:itemIconSize="22dp"
        app:itemPaddingBottom="10dp"
        app:itemPaddingTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_navigation_menu"
        style="@style/MyBottomNavigation"/>

</androidx.constraintlayout.widget.ConstraintLayout>